<Window x:Class="HallScheduler.Desktop.Client.Views.SelectHallView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HallScheduler.Desktop.Client.Views"
        xmlns:autocomplete="clr-namespace:FeserWard.Controls;assembly=Intellibox"
        mc:Ignorable="d"
        Title="SelectHallView" Height="989" Width="1306.333">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="23*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Grid.RowSpan="1" Grid.Column="0" Grid.ColumnSpan="1">
            <TextBlock Text="Search" FontFamily="Segoe UI" FontSize="24" FontStretch="Expanded"
                   HorizontalAlignment="Center" Height="30" Width="100" />
            <autocomplete:Intellibox 
                Grid.Row="1" Grid.RowSpan="1" 
                Grid.Column="1" Grid.ColumnSpan="1"
                x:Name="autocompleteTextBox" SelectAllOnFocus="True" 
                HorizontalAlignment="Center"
                DataProvider="{Binding QueryProvider}"
                DisplayedValueBinding="{Binding SelectedValue, Mode=OneWay}"
                SelectedItem="{Binding SelectedItem}"
                SelectedValue="{Binding SelectedValue}"
                Height="30" Width="200" 
                ResultsHeight="150" ResultsWidth="200"
                ExplicitlyIncludeColumns="True" Margin="0,0,46,0">
                <autocomplete:Intellibox.Columns>
                    <autocomplete:IntelliboxColumn DisplayMemberBinding="{Binding Type}" Header="Type" />
                    <autocomplete:IntelliboxColumn DisplayMemberBinding="{Binding Block}" Header="Block" />
                    <autocomplete:IntelliboxColumn DisplayMemberBinding="{Binding Stage}" Header="Stage" />
                    <autocomplete:IntelliboxColumn DisplayMemberBinding="{Binding Room}" Header="Room" />
                </autocomplete:Intellibox.Columns>
            </autocomplete:Intellibox>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.RowSpan="1" Grid.Column="0" Grid.ColumnSpan="1">
            <TabControl ItemsSource="{Binding TabItems}">
                <TabControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock>
                            <TextBlock Text="XAA"/> 
                            <TextBlock Text="XAAAA"/>
                        </TextBlock>
                    </DataTemplate>
                </TabControl.ItemTemplate>

                <TabControl.ContentTemplate>
                    <DataTemplate>
                        <TextBlock>                            
                            This is 
                            <TextBlock Text="FFFFF"/> 
                            <TextBlock Text="LLLLL"/>
                        </TextBlock>
                    </DataTemplate>
                </TabControl.ContentTemplate>
            </TabControl>
        </StackPanel>

    </Grid>
</Window>
