<Window x:Class="HallScheduler.Desktop.Client.Views.SelectHallView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HallScheduler.Desktop.Client.Views"
        xmlns:autocomplete="clr-namespace:FeserWard.Controls;assembly=Intellibox"
        mc:Ignorable="d"
        Title="SelectHallView" Height="674" Width="1300">
    <Grid Height="642" VerticalAlignment="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="23*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Grid.RowSpan="1" Grid.Column="0" Grid.ColumnSpan="1">
            <TextBlock Text="Search" FontFamily="Segoe UI" FontSize="28" FontStretch="Expanded"
                   HorizontalAlignment="Center" Height="34" Width="130" />
            <autocomplete:Intellibox 
                Grid.Row="1" Grid.RowSpan="1" 
                Grid.Column="1" Grid.ColumnSpan="1"
                x:Name="autocompleteTextBox" SelectAllOnFocus="True" 
                HorizontalAlignment="Center"
                DataProvider="{Binding QueryProvider}"
                SelectedItem="{Binding SelectedItem}"
                DisplayedValueBinding="{Binding Name}"
                SelectedValue="{Binding SelectedValue}"
                Height="30" Width="420" 
                FontSize="18"
                ResultsHeight="200" ResultsWidth="420"
                ExplicitlyIncludeColumns="True" Margin="0,0,46,0">
                <autocomplete:Intellibox.Columns>
                    <autocomplete:IntelliboxColumn DisplayMemberBinding="{Binding Type}" Header="Type" Width="100"/>
                    <autocomplete:IntelliboxColumn DisplayMemberBinding="{Binding Name}" Header="Name" Width="90"/>
                    <autocomplete:IntelliboxColumn DisplayMemberBinding="{Binding Block}" Header="Block" Width="60"/>
                    <autocomplete:IntelliboxColumn DisplayMemberBinding="{Binding Stage}" Header="Stage" Width="60"/>
                    <autocomplete:IntelliboxColumn DisplayMemberBinding="{Binding Room}" Header="Room" Width="60"/>
                </autocomplete:Intellibox.Columns>
            </autocomplete:Intellibox>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.RowSpan="1" Grid.Column="0" Grid.ColumnSpan="1" 
                    HorizontalAlignment="Center">
            <TabControl ItemsSource="{Binding WeeklySchedule, Mode=OneWay}" HorizontalAlignment="Center" Width="800" >
                <TabControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock>
                            <TextBlock Text="{Binding DayOfWeek}"/> 
                        </TextBlock>
                    </DataTemplate>
                </TabControl.ItemTemplate>
                <TabControl.ContentTemplate>
                    <DataTemplate>
                        <ListView x:Name="listView" ItemsSource="{Binding Schedule}" SelectedItem="{Binding SelectedItem}">
                            <ListView.View>
                                <GridView>
                                    <GridView.ColumnHeaderContainerStyle>
                                        <Style TargetType="GridViewColumnHeader">
                                            <Setter Property="HorizontalContentAlignment" Value="Left"></Setter>
                                        </Style>
                                    </GridView.ColumnHeaderContainerStyle>
                                    <GridViewColumn Header="Time range" Width="120">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock HorizontalAlignment="Center" Text="{Binding TimeRange}"></TextBlock>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="Topic" Width="340" DisplayMemberBinding="{Binding Topic}" />
                                    <GridViewColumn Header="Lecturer" Width="120" DisplayMemberBinding="{Binding LecturerName}" />
                                    <GridViewColumn Header="Options" Width="110" >
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Name="scheduleButton" Content="Schedule" 
                                                        Command="{Bindin}"
                                                        IsEnabled="{Binding RelativeSource={RelativeSource AncestorType={x:Type ListView}}, Path=DataContext.IsSchedulingEnabled}" 
                                                        Width="90" HorizontalAlignment="Center"></Button>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </DataTemplate>
                </TabControl.ContentTemplate>
            </TabControl>
        </StackPanel>
        <Label x:Name="label" Content="User details:" FontSize="28"
               HorizontalAlignment="Left" Margin="38,10,0,0" Grid.Row="2" VerticalAlignment="Top" Height="51" Width="176"/>
        <TextBlock Width="220" Height="40" Text="{Binding IdentityService.UserIdentity.FullName}" Margin="10,79,1062,162" Grid.Row="2"></TextBlock>
        <TextBlock Width="220" Height="40" Text="{Binding IdentityService.UserIdentity.Email}" Margin="10,125,1062,116" Grid.Row="2"></TextBlock>
        <TextBlock Width="220" Height="40" Text="{Binding IdentityService.UserIdentity.AcademicRank}" Margin="10,169,1062,72" Grid.Row="2"></TextBlock>
        <TextBlock Width="220" Height="40" Text="{Binding IdentityService.UserIdentity.Faculty}" Margin="10,215,1062,26" Grid.Row="2"></TextBlock>
        <Button Content="Logout" Margin="1146,10,10,37" 
                Name="btnLogout" Click="btnLogout_Click"/>
    </Grid>
</Window>
